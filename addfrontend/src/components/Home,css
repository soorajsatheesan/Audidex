/* This will create the wave animation effect */
@keyframes wave {
  0% {
    transform: scaleY(1);
  }
  25% {
    transform: scaleY(1.2);
  }
  50% {
    transform: scaleY(1);
  }
  75% {
    transform: scaleY(1.2);
  }
  100% {
    transform: scaleY(1);
  }
}

/* Apply the wave effect to the text */
.animate-wave {
  display: inline-block;
  animation: wave 1.5s ease-in-out infinite;
}
